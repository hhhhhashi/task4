<main>
  <h3>注文履歴一覧</h3>

  <div class="d-flex justify-content-between w-100">
    <table class="table w-60 table table-bordered">
      <thead class="table-secondary">
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at %></th>
          <th><%= order.address %></th>
          <th>
            <% @cart_items.each do |cart_item| %>
            <%= cart_item.item.name %>
            <% end %>
          </th>
          <th><%= order.total_payment + 800 %></th>
          <th><%= order.status_i18n %></th>
          <th><%= link_to "表示する", order_path(order) ,class: "btn btn-primary"  %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>


</main>