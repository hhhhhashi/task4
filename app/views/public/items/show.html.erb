<main>
  <%= image_tag @item.get_profile_image(200,200) %>

  <P>商品名<%= @item.name %></P>

  <p>商品説明<%= @item.introduction %></p>

  <p>税込価格(税抜価格)<%= @item.price %></p>

  <%= form_with model: @cart_item, url: cart_items_path  do |f| %>

    <p>個数選択</p>
    <%= f.select :amount,*[1..10] %>
    <%#=文字を入れたい%>

    <%= f.hidden_field :item_id, value:@item.id %>

    <%= f.submit 'カートに入れる' %>
  <% end %>
</main>
