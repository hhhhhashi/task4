<main>
  <h2>ショッピングカート</h2>

  <%= link_to "カートを空にする", cart_items_path, method: :delete %>


  <div class="d-flex justify-content-between w-100">
    <table class="table w-60">
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <th>
            <%= image_tag cart_item.item.get_profile_image(200,200) %>
            <%= cart_item.item.name %>
          </th>
          <th><%= (cart_item.item.price * 1.1).floor %></th>
          <th>
            <%= form_with model: cart_item do |f| %>
            <%=f.number_field :amount %>
            <%= f.submit "変更" %>
            <% end %>
          </th>
          <th><%= (cart_item.item.price * 1.1).floor*cart_item.amount %></th>
          <th>
            <% if cart_item.customer == current_customer %>
            <%= link_to "削除する", cart_item_path(cart_item), method: :delete %>
            <% end %>
          </th>
        </tr>
        <% @total_price=@total_price + (cart_item.item.price * 1.1).floor*cart_item.amount %>
        <% end %>
      </tbody>
    </table>
  </div>

  <P>合計金額</P>
  <%= @total_price %>

  <%= link_to "買い物を続ける", items_path %>

  <%= link_to "情報入力に進む", new_order_path %>

</main>
