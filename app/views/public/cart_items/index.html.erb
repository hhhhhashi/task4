<main>
  <h2>ショッピングカート</h2>

  <%= link_to "全て削除", cart_items_path, method: :delete %>

  <% @cart_items.each do |cart_item| %>

  <p>商品名</p>
  <%= cart_item.item.name %>

  <p>単価</p>
  <%= (cart_item.item.price * 1.1).floor %>

  <p>数量</p>
  <%= cart_item.amount %>

  <p>小計<p/>
  <%= (cart_item.item.price * 1.1).floor*cart_item.amount %>
  <% @total_price=@total_price + (cart_item.item.price * 1.1).floor*cart_item.amount %>

  <% if cart_item.customer == current_customer %>
    <%= link_to "削除", cart_item_path(cart_item), method: :delete %>
  <% end %>

  <% end %>


  <P>合計金額</P>
  <%= @total_price %>

  <%= link_to "買い物を続ける", items_path %>

  <%= link_to "情報入力に進む", new_order_path %>

</main>
