<main>
  <h2>配送先登録/一覧</h2>

  <%= form_with model: @address,url: addresses_path do |f| %>
   <p>郵便番号(ハイフンなし)</p>
   <%= f.text_field :postal_code %>

   <p>住所</p>
   <%= f.text_field :address %>

   <p>宛名</p>
   <%= f.text_field :name %>

   <%= f.submit "新規登録" %>

  <% end %>

  <% @addresses.each do |address| %>

  <p>郵便番号 <%= address.postal_code %></p>
  <p>住所 <%= address.address %></p>
  <p>宛名<%= address.name %></p>
  <%= link_to "編集する", edit_address_path(address) %>
  <%= link_to "削除する", address_path(address), method: :delete %>

  <% end %>






</main>
