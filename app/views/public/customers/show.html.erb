<main>
  <h2>マイページ</h2>

  <dl class="row">
    <dt class="col-2"><h3>登録情報</h3></dt>
    <dd class="col-10"><%= link_to "編集する", information_edit_path %></dd>
  </dl>


  <p>氏名</p>
  <%= @customer.last_name %><% @customer.first_name %>

  <p>カナ</p>
  <%= @customer.last_name_kana %><% @customer.first_name_kana %>

  <p>郵便番号</p>
  <%= @customer.postal_code %>

  <p>住所</p>
  <%= @customer.address %>

  <p>電話番号</p>
  <%= @customer.telephone_number %>

  <p>メールアドレス</p>
  <%= @customer.email %>
  
  <dl class="row">
    <dt class="col-2"><h3>配送先</h3></dt>
    <dd class="col-10"><%= link_to '一覧を見る', addresses_path %></dd>
    <dt class="col-2"><h3>注文履歴</h3></dt>
    <dd class="col-10"><%= link_to '一覧を見る', orders_path %></dd>
  </dl>

</main>