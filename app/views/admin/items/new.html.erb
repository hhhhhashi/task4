<h2 class="mb-4">商品新規登録</h2>
  <%= form_with model: @item, url: admin_items_path do |f| %>

    <dl class="row">
      <dt class="col-2"><P>商品画像</P></dt>
      <dd class="col-10"><%= f.file_field :image, accept: "image/*" %></dd>

      <dt class="col-2"><P>商品名</P></dt>
      <dd class="col-10"><%= f.text_field :name %></dd>

      <dt class="col-2"><P>商品説明</P></dt>
      <dd class="col-10"><%= f.text_area :introduction %></dd>

      <dt class="col-2"><P>税抜価格</P></dt>
      <dd class="col-10"><%= f.number_field :price %>円</dd>
    </dl>

    <p>販売ステータス</p>
    <p><%= f.radio_button(:is_active, true) %>販売中</p>
    <p><%= f.radio_button(:is_active, false) %>販売停止中</p>

    <%= f.submit '新規登録',class: "btn btn-success" %>
  <% end %>