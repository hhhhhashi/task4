<h2>商品新規登録</h2>
  <%= form_with model: @item, url: admin_items_path do |f| %>

    <p>画像</p>
    <%= f.file_field :image, accept: "image/*" %>

    <p>商品名</p>
    <%= f.text_field :name %>

    <p>説明</p>
    <%= f.text_field :introduction %>

    <p>税抜価格</p>
    <%= f.text_field :price %>

    <p>販売ステータス</p>
    <p>販売中</p><%= f.radio_button(:is_active, true) %>
    <p>販売停止中</p><%= f.radio_button(:is_active, false) %>

    <%= f.submit '新規登録' %>
  <% end %>