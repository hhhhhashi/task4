<main>
  <h2>商品一覧</h2>

  <%=link_to new_admin_item_path do %>
  新規商品登録
  <% end %>

  <% @items.each do |item| %>
  <%#= image_tag item.get_image %>

  <p>商品ID</p>
  <%=item.id %>

  <p>商品名</p>
  <%= link_to admin_item_path(item.id) do %>
  <%=item.name %>
  <% end %>

  <p>税抜価格</p>
  <%=item.price %>

  <p>販売ステータス</p>
  <% if item.is_active==true %>
    販売中
  <% elsif item.is_active==false %>
    販売停止中
  <% end %>

  <% end %>

</main>


