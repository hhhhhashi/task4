<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">LOGO</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>

                <li class="nav-item">
                  <%= link_to admin_items_path, class: 'nav-link text-light' do %>
                  商品一覧
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to admin_customers_index_path, class: 'nav-link text-light' do %>
                  会員一覧
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to admin_root_path, class: 'nav-link text-light' do %>
                  注文履歴一覧
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
                  ログアウト
                  <% end %>
                </li>

              <% else %>
                <li class="nav-item">
                  <%= link_to new_admin_session_path, class: 'nav-link text-light' do %>
                  ログイン
                  <% end %>
                </li>

                <li class="nav-item">
                  <%= link_to admin_items_index_path, class: 'nav-link text-light' do %>
                  商品一覧
                  <% end %>
                </li>

              <% end %>
  </header>
  <%= yield %>
</body>